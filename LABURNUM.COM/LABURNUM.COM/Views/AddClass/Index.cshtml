@model DTO.LABURNUM.COM.ClassModel

@using (Ajax.BeginForm(new AjaxOptions { OnBegin = "OnAddClassBegin", OnSuccess = "OnAddClassSuccess", Url = @LABURNUM.COM.Component.Constants.URL.WEBSITEURL + "AddClass/AddClass" }))
{
    <section class="panel">
        <header class="panel-heading">
            Add Class<span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
            </span>
        </header>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6 col-md-6 col-xs-12">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="score_adept">Class Name : </span>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.ClassName, new { @id = "txtClassName", @autocomplete = "Off" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div>
        <button id="btnAddClass" type="submit" class="btn btn-default">Add Class</button>
    </div>
    <div id="divLoader" style="margin-top: 10px;" class="display_none text-center">
        <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/loader.gif" />
    </div>
    <div id="divMessage" style="margin-top: 10px;" class="display_none text-center"></div>
}