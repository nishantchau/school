@model DTO.LABURNUM.COM.ClassModel

@using (Ajax.BeginForm(new AjaxOptions { OnBegin = "OnStatusUpdateBegin", OnSuccess = "OnStatusUpdateSuccess", Url = @LABURNUM.COM.Component.Constants.URL.WEBSITEURL + "AddClass/StatusUpdate" }))
{
    <div class="modal-dialog modal-dialogadept modal-dialogadept-mini" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/button-close.png" /></span></button>
                <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <span class="score_adept"><i></i></span>
                    </div>

                    @Html.HiddenFor(x => x.ClassId)
                    @if (Model.IsActive)
                    {  
                        <div class="col-md-8">
                            <div class="form-group">
                                Are you Sure to Delete?
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-8">
                            <div class="form-group">
                                Are you Sure to Un-Delete?
                            </div>
                        </div>
                    }

                    <div class="col-md-12 text-center">
                        <button id="btnSubmit" type="submit" class="btn btn-default btn-adeptsubmit btn-adeptsubmitfirst">Update</button>
                        <button type="button" class="btn btn-default btn-adeptsubmit btn-danger" data-dismiss="modal" aria-label="Close">Close</button>
                    </div>
                    <div id="divPopupLoader" class="col-md-12 display_none text-center margin_small">
                        <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/loader.gif" />
                    </div>
                    <div id="divPopupMessage" class="display_none text-center margin_small"></div>
                </div>
            </div>
        </div>
    </div>
}
