@model DTO.LABURNUM.COM.ClassModel

@{
    ViewBag.Title = "EditClassPopup";
}

@using (Ajax.BeginForm(new AjaxOptions { OnBegin = "OnEditClassBegin", OnSuccess = "OnEditClassSuccess", Url = @LABURNUM.COM.Component.Constants.URL.WEBSITEURL + "AddClass/EditClass" }))
{
    <div class="modal-dialog modal-dialogadept modal-dialogadept-mini" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/button-close.png" /></span></button>
                <h4 class="modal-title" id="myModalLabel">Update Class</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <span class="score_adept">Class Name<i>:</i></span>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ClassId)
                            @Html.TextBoxFor(x => x.ClassName, new { @id = "txtClassNameP", @autocomplete = "Off" })
                        </div>
                    </div>

                    <div class="col-md-12 text-center">
                        <button id="btnSubmit" type="submit" class="btn btn-default btn-adeptsubmit btn-adeptsubmitfirst">Update</button>
                        <button type="button" class="btn btn-default btn-adeptsubmit btn-danger" data-dismiss="modal" aria-label="Close">Close</button>
                    </div>
                    <div id="divPopupLoader" class="col-md-12 display_none text-center margin_small">
                        <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/loader.gif" />
                    </div>
                    <div id="divPopupMessage" class="display_none text-center margin_small col-md-12"></div>
                </div>
            </div>
        </div>
    </div>
}
